---
const {rightIcon,variant,...rest} = Astro.props
---
<button style={rest} class={variant === "primary" ? "button text-smooth":"text-smooth button-secondary"}>
    <slot/>
</button>
<style is:global>
    .button-secondary{
        display: flex;
        align-items: center;
        gap:4px;
        background-color: #211d1f;
        outline: 1px solid #565052;
        border:none;
        padding: 6px 12px;
        border-radius: 4px;
		color:var(--gray-primary);
		text-align: start;
        cursor: pointer;
        transition:.15s ease;
		font-weight: 500;
		font-size: 12px;
		font-family:system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    }
    .button{
        display: flex;
        align-items: center;
        gap:4px;
        background-color: var(--black-primary);
        color:var(--pink-secondary);
        border:none;
        padding:8px 16px;
        border-radius: 4px;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        cursor:pointer;
        letter-spacing: .5px;
        font-size: 13px;
        font-weight: 600;
        outline: 1px solid var(--border-color-soft);
        transition:.15s ease;
    }
    .button:hover{
        color:var(--pink-primary);
        outline: 1px solid var(--pink-primary);
    }
    .button-secondary:hover{
        color:var(--pink-secondary);
        outline: 1px solid var(--pink-secondary);
    }
    .button:hover .button-svg{
        stroke:var(--pink-primary);
		translate:0 1.5px;
    }
    .button-svg-solid{
		transition:.15s ease;
		height: 14px;
		width:14px;
		/* fill:var(--pink-secondary); */
		stroke: var(--pink-secondary);
		
	}
    .button-svg{
		transition:.15s ease;
		height: 16px;
		width:16px;
        stroke-width: 2.5px;
		/* fill:var(--pink-secondary); */
		stroke: var(--pink-secondary);
		
	}
</style>